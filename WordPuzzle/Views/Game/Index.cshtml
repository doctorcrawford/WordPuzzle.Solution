@{
  Layout = "_Layout";
}
@using WordPuzzle.Models;
@using System.Linq;
@using System.Collections.Generic;
@using System;

<h1> It's Hurdlin' Time!</h1>

@if (@Game.GetAll().Count == 0)
{
  <h3>No Game Loaded!</h3>
  <p><a href="/">Reload from Home</a></p>
}

<div>
  <form action="/game/guess/new" method="post">
    <input name="gameId" type="hidden" value="@Game.GetAll().Last().Id">
    @for (int i = 0; i < Model.Comparator.Length; i++)
    {
    <label for="letter"></label>
    <input id="letter" name="letter" type="text">
    }
  <button type="submit">Check my answer</button>

  </form>
</div>